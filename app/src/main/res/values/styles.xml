<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppWelcome" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/ksplash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="righster_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="text_dialog_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#999999</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/rigister_edit_bg</item>
    </style>
</resources>