<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maturedating.datingapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name="com.maturedating.datingapp.KApplication"
        android:allowBackup="true"
        android:icon="@mipmap/klogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/klogo"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar">

        <activity android:name="com.maturedating.datingapp.ui.activity.SplashActivity"
            android:theme="@style/AppWelcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.maturedating.datingapp.ui.activity.EmailActivity"/>

        <activity android:name="com.maturedating.datingapp.ui.activity.GenderActivity"/>

        <activity android:name="com.maturedating.datingapp.ui.activity.LookForActivity"/>

        <activity android:name="com.maturedating.datingapp.ui.activity.NameActivity"/>

        <activity android:name="com.maturedating.datingapp.ui.activity.RegisterActivity"/>

        <activity android:name="com.maturedating.datingapp.ui.activity.PromptActivity"/>

        <activity android:name="com.maturedating.datingapp.ui.activity.AgeActivity"/>

        <activity android:name="com.maturedating.datingapp.ui.activity.HomeActivity"/>

        <activity android:name="com.maturedating.datingapp.ui.activity.WebViewActivity"/>
    </application>

</manifest>